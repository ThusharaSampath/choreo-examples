<?xml version="1.0" encoding="UTF-8"?>
<api context="/restapiwithsecret" name="RestAPIWithSecret" publishSwagger="src/main/resources/metadata" xmlns="http://ws.apache.org/ns/synapse">
    <resource methods="GET" url-mapping="/getsecret">
        <inSequence>
            <property name="secret_key" scope="default" type="STRING" value="my_secret"/>
            <property expression="wso2:vault-lookup('my_secret')" name="secret_value" scope="default" type="STRING"/>
            <payloadFactory media-type="json">
                <format>
{
    "Info": "Integration with secrets",
    "secret_key": "$1",
    "secret_value": "$2"
}                
                </format>
                <args>
                    <arg evaluator="json" expression="$ctx:secret_key"/>
                    <arg evaluator="json" expression="$ctx:secret_value"/>
                </args>
            </payloadFactory>
            <respond/>
        </inSequence>
        <outSequence/>
        <faultSequence/>
    </resource>
</api>
